{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<br>
<br>
 <form name="frm" method="post" action="">
        <h1>Product Management</h1>
        <p>
          <img src="img/add.png" alt="Add new" width="16" height="16" border="0" /> <a href="{{path('addProduct')}}"> ADD</a>
        </p>
        <table id="tableproduct" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th><strong>No.</strong></th>
                    <th><strong>Product Name</strong></th>
                    <th><strong>Price</strong></th>
                    <th><strong>Quantity</strong></th>
                    <th><strong>Description</strong></th>
                    <th><strong>Image</strong></th>
                    <th><strong>Delete</strong></th>
                </tr>
            </thead>
            <tbody>
            {% for p in product %}
                 <tr>
                        <td>{{p.id}}</td>
                        <td>{{p.ProductName}}</td>
                        <td>{{p.Price}}</td>
                        <td>{{p.ProQty}}</td>
                        <td>{{p.DetailDesc}}</td>
                        <td align='center'>
                            <img src="{{ path('get_image', { filename: p.image }) }}" width="50" height="50" />
                        </td>
                            <td align='center'>
                                <a href="{{path('deleteProduct', {id:p.id})}}">
                                    <img src="img/delete.png" border='0' width="16" height="16" /></a>
                            </td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </form>
{% endblock %}
